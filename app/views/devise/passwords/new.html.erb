<section class="container g-py-50">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-lg-6">
      <div class="g-brd-around g-brd-gray-light-v4 rounded g-py-40 g-px-30">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', method: :post }) do |f| %>

          <p class="text-center">Enter your email address to receive a password reset link.</p>

          <div class="mb-4">
            <%= f.email_field :email, required: true, autofocus: true, class: 'form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v4 g-brd-primary--hover rounded g-py-15 g-px-15', placeholder: 'Email Address' %>
          </div>

          <div class="g-mb-35">
            <div class="row justify-content-between">
              <div class="col-12 align-self-center text-center">
                <button class="btn u-btn-primary g-font-weight-600 g-font-size-12 text-uppercase g-px-25 g-py-8"
                        type="submit">Send Reset Instructions
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>